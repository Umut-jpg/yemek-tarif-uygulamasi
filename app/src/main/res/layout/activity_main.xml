<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tema"
    android:id="@+id/ly"
    tools:context=".Activty.MainActivity">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="91dp"
        android:gravity="center"

        android:background="@drawable/logo">

        <ImageView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:background="@drawable/amblemm" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="300dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/giristext"
        android:gravity="center"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/email" />
        <EditText
            android:id="@+id/email"
            android:layout_width="170dp"
            android:layout_height="41dp"
            android:layout_marginStart="3dp"
            android:hint="@string/email"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:textSize="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="370dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/giristext"
        android:gravity="center"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/pasword" />
        <EditText
            android:id="@+id/sifre"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginStart="3dp"
            android:textStyle="bold"
            android:inputType="textPassword"
            android:textSize="16dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="@string/sifre"/>
    </LinearLayout>

    <Button
        android:id="@+id/giris"
        android:layout_width="137dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="482dp"
        android:background="@drawable/buton_design"
        android:gravity="center"
        android:text="GİRİŞ"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="438dp"

        android:background="#409A0303">

        <TextView
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:text="Hemen Sende Bir"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tiklaKayit"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="TIKLA"
            android:textColor="#F8FF25"
            android:layout_marginStart="5dp"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:text="Bize Katıl"
            android:textSize="13dp"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="555dp"
        android:gravity="center"

        android:background="@drawable/logo">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/insta" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="175dp"
        android:layout_marginTop="555dp"
        android:gravity="center"

        android:background="@drawable/logo">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/facebook" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="245dp"
        android:layout_marginTop="555dp"
        android:gravity="center"

        android:background="@drawable/logo">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/twitter" />

    </LinearLayout>

    <TextView
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="YUMMY ile Sende Dünya Mutfağına Ayak Uydur"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />


</RelativeLayout>