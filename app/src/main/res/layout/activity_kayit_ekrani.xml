<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tema"
    tools:context=".Activty.KayitEkrani">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="91dp"
        android:gravity="center"

        android:background="@drawable/logo">

        <ImageView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:background="@drawable/amblemm" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="310dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/giristext"
        android:gravity="center"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/person" />
        <EditText
            android:id="@+id/kullaniciAdi"
            android:inputType="textPersonName"
            android:layout_width="170dp"
            android:layout_height="36dp"
            android:layout_marginStart="3dp"
            android:hint="@string/ad"
            android:textStyle="bold"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="375dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/giristext"
        android:gravity="center"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/pasword" />
        <EditText
            android:id="@+id/kullaniciSifre"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginStart="3dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:hint="@string/sifre"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="435dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/giristext"
        android:gravity="center"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/email" />

        <EditText
            android:id="@+id/kullaniciMail"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginStart="3dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:hint="@string/email"/>
    </LinearLayout>

    <Button
        android:id="@+id/kaydol"
        android:layout_width="105dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/buton_design"
        android:gravity="center"
        android:text="KATIL"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="570dp"
        android:gravity="center"

        android:background="@drawable/logo">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/ekmek" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="175dp"
        android:layout_marginTop="570dp"
        android:gravity="center"

        android:background="@drawable/logo">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/pasta" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="245dp"
        android:layout_marginTop="570dp"
        android:gravity="center"

        android:background="@drawable/logo">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/patates" />

    </LinearLayout>





    <TextView
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="YUMMY'ye Sende Kaydol ve Lezzetleri Yakala"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold|italic" />

</RelativeLayout>